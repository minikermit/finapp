

<h1>Listing report lines</h1>

<h6><%= link_to  "> Back to report categories" , report_categories_path %>
<%= link_to  " > Back to reports" , reports_path %> </h6>

<table>
  <tr>
    <th>Line</th>
    <th>Name</th>
    <th>Position</th>
    <th>Description</th>
    <th>Report</th>
  </tr>

<% for report_line in @report_lines %>
  <tr>
    <td><%= link_to "#{report_line.Line_Id}", :controller => "report_structures" ,:action => "index", :report_line_id => report_line.Fimis_Identifier %></td>
    <td><%=h report_line.Line_Caption %></td>
    <td><%=h report_line.position %></td>
    <td><%= link_to "#{report_line.report.Report_Name}", :controller => "reports", :action => 'index', :report_id => report_line.report.Fimis_Identifier  %></td>
    <td><%= link_to image_tag('iconmini/search-icon-blue.gif') , report_line %></td>
    <td><%= link_to image_tag('iconmini/edit-blue.gif'), edit_report_line_path(report_line) %></td>
    <td><%= link_to image_tag('iconmini/delete-page-blue.gif'), report_line, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New report_line', new_report_line_path %>
