<h1>Listing account_plans</h1>

<% form_tag request.path, :method => 'get' do %>
	<% content_tag :label do %>
	 Search Term:
	 <%= text_field_tag :search, params[:search] %>
	<% end %>
<% end %>

<table>
  <tr>
  	<th>#</th>
    <th>Account Plan</th>
    <th>Account ID</th>
    <th>Description</th>
    <th>...</th>
    <th>Order</th>
    <th>Parent</th>
    <th>Lock</th>
  </tr>

<% for account_plan in @account_plans %>
  <tr>
  	<td><%=h account_plan.FiMIS_Identifier %></td>
    <td><%=h account_plan.Account_Type_FK %></td>
    <td><%=h account_plan.Account_ID %></td>
    <td><%=h account_plan.Account_Description %></td>
    <td><%=h account_plan.Account_Short_Description %></td>
    <td><%=h account_plan.Sequence_ID %></td>
    <td><%=h account_plan.Account_Parent_ID %></td>
    <td><%=h account_plan.Lock_Status %></td>
    <td><%= link_to 'Show', account_plan %></td>
    <td><%= link_to 'Edit', edit_account_plan_path(account_plan) %></td>
    <td><%= link_to 'Destroy', account_plan, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @account_plans %>
  </div-->
    <%= will_paginate @account_plans, :container => false %>
</div>

