<h1>New portal</h1>

<% form_for(@portal) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description2 %><br />
    <%= f.text_area :description2 %>
  </p>

   <p>  
    <%= f.label :logo, "Logo" %>
    <%= f.file_field :logo %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', portals_path %>
