<h1>Listing portals</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description2</th>
  </tr>

<% for portal in @portals %>
  <tr>
    <td><%=h portal.title %></td>
    <td><%=h portal.description2 %></td>
    <td><%= link_to 'Show', portal %></td>
    <td><%= link_to 'Edit', edit_portal_path(portal) %></td>
    <td><%= link_to 'Destroy', portal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New portal', new_portal_path %>