<h1>Listing reports</h1>

<h6><%= link_to  "> Back to report categories" , report_categories_path %></h6>

<table>
  <tr>
    <th>Position</th>    
    <th>Name</th>
    <th>Report Category</th>
    <th> </th>
    <th>Created at</th>
  </tr>

<% for report in @reports %>
  <tr>
    <td>
       <%= report.Order %>
    </td>
    <td>
       <%= link_to "#{report.Report_Name}", :controller => "report_lines" ,:action => "index", :report_id => report.id %>
    </td>
         <!--%= link_to "#{report.name}", report %-->
    <td>
       <%= report.report_category.Category_Type_Description %> 
       <!--%= link_to "#{report.report_category.Category_Kind_Description}", :controller => "report_categories" , :action => 'index', :Report_Category_ID => report.report_category.Report_Category_ID  %-->
    </td>
    <td>
	<%= link_to image_tag('iconmini/delete-page-blue.gif'),  report, :confirm => 'Are you sure?', :method => :delete  %>
    </td>
    <td>
  <%= h report.Record_Creation_Date %>
    </td>
  </tr>
<% end %>
</table>


