<% if @report_lines.to_a.empty? -%>
<div class="post">
<p>No report lines found...</p>
</div>
<% else -%>

<table>
  <tr>
    <th>Line</th>
    <th>Name</th>
    <th>Position</th>
    <th>Description</th>
    <th>Report</th>
  </tr>
  
<% for report_line in @report_lines %>
  <tr>
    <td><%= link_to "#{report_line.line_id}", :controller => "report_structures" ,:action => "index", :report_line_id => report_line.id %></td>
    <td><%=h report_line.name %></td>
    <td><%=h report_line.position %></td>
    <td><%=h report_line.description %></td>
    <td><%= link_to "#{report_line.report.name}", :controller => "reports", :action => 'index', :report_id => report_line.report.id  %></td>
    <td><%= link_to image_tag('iconmini/search-icon-blue.gif') , report_line %></td>
    <td><%= link_to image_tag('iconmini/edit-blue.gif'), edit_report_line_path(report_line) %></td>
    <td><%= link_to image_tag('iconmini/delete-page-blue.gif'), report_line, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

</table>

<br />

<% end -%>
