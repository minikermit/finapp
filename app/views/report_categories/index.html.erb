<span class="myapptitle">Listing Categories</span>

<table>
  <tr>
    <th>Type</th>
    <th>Name</th>
  </tr>

<% for report_category in @report_categories %>
  <tr>
    <td><%=h report_category.Category_Kind_Description %></td>
    <td><%=h report_category.Category_Type_Description %></td>
    <td><%= link_to image_tag('iconmini/search-icon-blue.gif'), :controller => "reports" ,:action => "index", :report_category_id => report_category.id %></td>
    <td><%= link_to image_tag('iconmini/edit-blue.gif'), edit_report_category_path(report_category) %></td>
    <td><%= link_to image_tag('iconmini/delete-page-blue.gif'), report_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New report_category', new_report_category_path %>
