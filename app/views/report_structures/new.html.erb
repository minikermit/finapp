<h1>New report_structure</h1>

<%= error_messages_for :report_structure %>

<% form_for(@report_structure) do |f| %>
  <p>
    <b>Line</b><br />
    <!--%= f.text_field :report_line_id %-->
    <%= select("report_structure", "report_line_id", ReportLine.find(:all).collect{ |c| [ c.name, c.id] }) %>

  </p>

  <p>
    <b>Account plan</b><br />
    <!--%= f.text_field :dim_account_plan_id %-->
    <%= select("report_structure", "dim_account_plan_id", DimAccountPlan.find(:all).collect{ |c| [ c.account_short_description, c.id] }) %>

  </p>

  <p>
    <b>Comment</b><br />
    <%= f.text_area :comment %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', report_structures_path %>
